			<!-- Celestial Categories Legend -->
			<div class="flex justify-center mb-8 px-2">
				<div class="flex flex-col sm:flex-row items-center gap-3 sm:gap-8 p-4 rounded-lg bg-black/30 backdrop-blur w-full max-w-2xl">
